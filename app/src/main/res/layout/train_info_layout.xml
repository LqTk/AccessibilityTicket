<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="添加列车信息"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入车次"
        android:id="@+id/et_train_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_seat1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一等座"
                android:textColor="@color/textColor"
                android:background="@drawable/seat_bg"/>
            <TextView
                android:id="@+id/tv_seat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二等座"
                android:layout_marginLeft="5dp"
                android:background="@drawable/seat_bg"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(暂不支持自选座位)"
            android:textSize="8sp"
            android:textColor="@color/colorGray"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_seat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软卧"
                android:background="@drawable/seat_bg"/>
            <TextView
                android:id="@+id/tv_seat4"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬卧"
                android:background="@drawable/seat_bg"/>
            <TextView
                android:id="@+id/tv_seat5"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬座"
                android:background="@drawable/seat_bg"/>
            <TextView
                android:id="@+id/tv_seat6"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无座"
                android:background="@drawable/seat_bg"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抢票优先顺序按照选择座位先后进行"
            android:layout_marginTop="5dp"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/tv_cancel"
            android:padding="10dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#999999"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/tv_commit"
            android:padding="10dp"
            android:textColor="@color/colorBlue"/>
    </LinearLayout>

</LinearLayout>
